<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  - Configuração do provider para utilizar a camera fotográfica nativa do Android
  - Para mais informações: https://developer.android.com/training/camera/photobasics.html#TaskPath
   <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="br.com.brolam.cloudvision.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
   </provider>
  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <external-path name="temp_pictures" path="Android/data/br.com.brolam.cloudvision/files/Pictures" />
</paths>