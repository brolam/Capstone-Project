<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  - Holder para um Note Vision Summary em um ListView                                            -
  - {@see br.com.brolam.cloudvision.ui.adapters.holders.NoteVisionSummaryHolder               -
  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutNoteVisionSummary"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTitle"
        style="@style/ListItem.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_text_margin"
        tools:text="XXXXX XXXXX XXXXXXX XXXXX" />

    <TextView
        android:id="@+id/textViewSubtitle"
        style="@style/ListItem.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Tru, Mar 2, 2017, 12:20 PM" />

    <TextView
        android:id="@+id/textViewSummary"
        style="@style/ListItem.Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_text_margin"
        android:maxLines="2"
        tools:text="XXXXX XXXX XXXXX XXXXXXX XXXXX XXXX XXXXXXXXX XXXXXXXXX XXXXXXXXX XXXXXXXX XXXXXXXXXX XXXXXXXX XXXXXXXX" />

</LinearLayout>