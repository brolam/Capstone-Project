<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  - Cartão com informações e barra de ferramenta para um Note Vision                           -
  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/note_vision_cards_height"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/linearLayoutTextsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_texts_background_protection"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingTop="@dimen/default_margin">

            <TextView
                android:id="@+id/textViewTitle"
                style="@style/CardView.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                tools:text="XXXXXXXXXXXXXXXXX" />


            <TextView
                android:id="@+id/textViewCreated"
                style="@style/CardView.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                tools:text="XXXXXXXXXXXX" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewUpdated"
                    style="@style/CardView.Summary.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    tools:text="XXXXXXXXXXXXXXXXX" />

                <TextView
                    android:id="@+id/textViewSummary"
                    style="@style/CardView.Summary.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    tools:text="XXXXX XXXX XXX XXXXXXX XXXXXXXXXX XXXXXX XXXXXX XXXXXXX XXXXXXXXX XXXXXXXXXXX XXXXXXX XXXXXXXX" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>